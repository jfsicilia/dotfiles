[user]
	name = jfsicilia
	email = jfsicilia@gmail.com
[color]
	ui = true
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
	autocrlf = input
[push]
	default = simple
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[alias]
	d = difftool
	s = status -s
	lg = log --oneline --decorate --all --graph
[pull]
	rebase = true
[rerere]
	enable = true
